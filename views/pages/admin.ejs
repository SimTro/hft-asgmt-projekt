<!DOCTYPE html>
<html lang="en">

    <head>
        <% include ../partials/head %>

        <style>
            table, th, td {
              border: 1px solid black;
              padding: 5px;
            }
            table {
              border-spacing: 15px;
            }
            </style>
    </head>

  <body>
    <%- include('../partials/nav', { active: 'index' }) %>
    <div class="container">
      
      <br>
      
      <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-6">
            <h1 class="page-title display-5">Admin-Bereich</h1>
        </div>
      </div>
      
    </div>

    <table style="width:50%" id = "shouts" class="table table-striped">
        <tr>
          <th>Link</th>
          <th>Kategorie</th>
          <th>Automarke</th>
          <th>Model</th>
          <th>Öffentlich</th>
        </tr>
        <% myRows.forEach( row => { %>
          <tr> 
            <td><%= row.link %></td>
            <td><%= row.category %></td>
            <td><%= row.model %></td>
            <td><button id="<%= row.rowid %>" onClick="delete_row(this.id)" class="btn btn-primary">Löschen</button></td>
          </tr>
        <% }); %>
        </tr>

      </table>
      

  </body>
</html>
